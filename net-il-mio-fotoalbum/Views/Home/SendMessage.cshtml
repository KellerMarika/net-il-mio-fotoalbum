@model net_il_mio_fotoalbum.Models.Message

<h1>SendMessage</h1>

<h4>Message</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input id="mex-email" class="d-block w-100" />
            </div>

            <div class="form-group">
                <textarea rows="10" id="mex-text" class="d-block w-100"></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-primary" onclick="SendMex()"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    <script type="text/javascript" src="~/js/ApiHome.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    }
}